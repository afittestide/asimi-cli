# Development container for Asimi CLI
FROM golang:1.25.3-bookworm

# Install common development tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    ripgrep \
    pkg-config \
    libgpgme-dev \
    libbtrfs-dev \
    && rm -rf /var/lib/apt/lists/*

# Install just task runner
RUN curl --proto '=https' --tlsv1.2 -sSf https://just.systems/install.sh | bash -s -- --to /usr/local/bin

# Install golangci-lint
RUN curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b /usr/local/bin

# bashrc file
RUN cat <<'EOF' >/root/.bashrc
__asimi_run() {
  local id="$1"
  local cmd="$2"
  # Output start markers directly before any redirects can affect them
  printf "__ASIMI_STDOUT_START:%s\n" "$id"
  # Execute the command in a subshell to isolate its redirects
  (eval "$cmd")
  local exit_code=$?
  # Output end markers after command completes, directly to original streams
  printf "__ASIMI_STDOUT_END:%s:%s\n" "$id" "$exit_code"
  return $exit_code
}
alias ll="ls -l"
EOF

ENV BASH_ENV="/root/.bashrc"
